package org.cdac;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.LinkedList;

public class EmployeeManagement {

//	1 add employee
//	2 display all employee
//	3 display employee of specific dept
//	4 display count of employees dept wise
//	5 sort employees by joining date
	
	LinkedList<Employee> list = new LinkedList<>();
	
	public void addEmployee() {
		
	}
	
	public void displayAll() {
		
	}
	
	public void deptWiseEmployee() {
		
	}
	
	public void deptWiseCount() {
		
	}
	
	public void sortByDate() {
		
	}
	
	public void loadFile(String fileName) {
		File file = new File(fileName);
		if(!file.exists())
			return;
		
		try (ObjectInputStream ois = new ObjectInputStream(new FileInputStream(file))) {
			
			list = (LinkedList<Employee>) ois.readObject();
			
		} catch (FileNotFoundException e) {
			e.getMessage();
		} catch (IOException e) {
			e.getMessage();
		} catch (ClassNotFoundException e) {
			e.getMessage();
		}
	}
	
	public void saveFile(String fileName) throws FileNotFoundException, IOException {
		
		try (ObjectOutputStream oos = new ObjectOutputStream(new FileOutputStream(fileName))) {
			
			oos.writeObject(list);
			
		}
		
	}
	
}
