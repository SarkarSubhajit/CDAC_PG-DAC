package org.cdac;

import java.io.FileWriter;
import java.io.IOException;
import java.io.PrintWriter;
import java.util.Scanner;

public class Entry {

	public static void main(String[] args) {
		
		try (Scanner scanner = new Scanner(System.in);
			PrintWriter writer = new PrintWriter(new FileWriter("test.java"))) {
			
			int choice;
			System.out.println("Enter ClassName: ");
			String name = scanner.nextLine();
			do {
				System.out.println("1. public");
				System.out.println("2. private");
				System.out.println("3. default");
				System.out.println("4. EXIT");
				choice = scanner.nextInt();
				scanner.nextLine();
				Menu option = Menu.fromChoice(choice);
				
				
				switch(option) {
				
				case PUBLIC: writer.print("public class" + name + " {"); break;
				
				case PRIVATE: writer.print("private class" + name + " {"); break;
				
				case DEFAULT: writer.print("class" + name + " {"); break;
				}
				
			} while (choice != 4);
			
		} catch (IOException e) {
			System.out.println(e.getMessage());
		}

	}

}
